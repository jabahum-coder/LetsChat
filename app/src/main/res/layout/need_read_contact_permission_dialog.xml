<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        android:layout_margin="@dimen/small"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="@dimen/medium"
            android:paddingBottom="@dimen/medium">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:src="@drawable/contacts"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allow read contacts"
                android:layout_marginTop="@dimen/medium"
                android:textSize="16sp"
                android:textColor="@color/textColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="36dp"
                android:paddingLeft="36dp"
                android:text="We will need this permission for better experience"
                android:layout_marginTop="@dimen/small"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/medium"
                android:background="@drawable/blue_gradient_circular_button"
                android:paddingTop="@dimen/small"
                android:paddingBottom="@dimen/small"
                android:paddingLeft="@dimen/medium"
                android:paddingRight="@dimen/medium"
                android:text="Sure, I'd like that"/>

            <TextView
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="36dp"
                android:paddingLeft="36dp"
                android:text="later"
                android:layout_marginTop="@dimen/small"
                android:textSize="14sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>